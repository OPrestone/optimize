        (function() {
            var a = setInterval( function() {
                if ( typeof window.jQuery === 'undefined' ) {
                    return;
                }
                var owl = $('.owl-carousel').owlCarousel({
                    loop: true,
                    margin: 10,
                    dots: false,
                    nav: true,
                    autoplay: true,
                    smartSpeed: 3000,
                    autoplayTimeout: 7000,
                    responsive: {
                        0: {
                            items: 1
                        },
                        600: {
                            items: 2
                        },
                        1000: {
                            items: 4
                        },
                        1200: {
                            items: 5
                        }
                    }
                });
                if(owl == null)
                    return;

                clearInterval( a );

                console.log( 'jQuery is loaded' ); // call your function with jQuery instead of this
            }, 500 );
        })();

